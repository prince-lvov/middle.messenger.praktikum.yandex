{
  "name": "messenger",
  "version": "1.0.0",
  "scripts": {
    "test:unit": "mocha --require @babel/register --require ./test/dom.js --require ignore-styles 'src/**/*.spec.js'",
    "test:unit:watch": "npm run test:unit -- --watch",
    "test": "./node_modules/.bin/mocha --require ts-node/register components/**/*.spec.ts",
    "start": "concurrently \"parcel index.pug\" \"node ./my_core/server.ts\"",
    "watch": "parcel serve --host 0.0.0.0 pug/index.pug old_template/login.pug pug/chat-page.pug",
    "build": "parcel build pug/index.pug pug/index2.pug old_template/chat-page.pug",
    "dev": "parcel index.pug --port 3000 --no-cache"
  },
  "directories": {
    "src": "./src",
    "test": "./test"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/register": "^7.16.0",
    "@parcel/transformer-pug": "^2.0.0-beta.2",
    "@parcel/transformer-sass": "^2.0.0-beta.2",
    "@types/chai": "^4.2.22",
    "@types/lodash": "^4.14.170",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.4",
    "concurrently": "^6.2.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.1",
    "ignore-styles": "^5.0.1",
    "jsdom": "^14.1.0",
    "lodash": "^4.17.21",
    "mocha": "^9.1.3",
    "parcel": "^2.0.0-beta.2",
    "pug": "^3.0.2",
    "stylelint": "^13.13.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "chai-http": "^4.3.0",
    "express": "^4.17.1",
    "jsdom-global": "^3.0.2"
  },
  "keywords": [],
  "description": ""
}
