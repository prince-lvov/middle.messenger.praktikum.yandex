extends include/layout.pug

block styles
	link(rel="stylesheet", href="../sass/common.sass")

block content
	.site-wrapper.hi-contrast-bg
		.modal
			img(src="../images/main-logo.svg", alt="Messenger")
			h2 Регистрация
			form.register
				.input-group
					label Имя и Фамилия
					input(type="text" name="name" autofocus)

				.input-group
					label Логин
					input(type="text" name="login")

				.input-group
					label Телефон
					input(type="tel" name="phone")

				.two-columns
					.input-group
						label Пароль
						input(type="password" name="password1")
					.input-group
						label Пароль
						input(type="password" name="password1")
					.error Пароли не совпадают

				.modal-bottom
					button Зарегистрироваться
					a(href="./login.pug") Уже есть аккаунт?
